<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_f3f3f3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_mine_info"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="245dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:elevation="1dp"
                        android:id="@+id/iv_head"
                        android:src="@mipmap/my_head"
                        android:layout_marginTop="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/iv_head"
                        android:layout_alignBottom="@+id/iv_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom"
                            android:id="@+id/rl_level"
                            android:background="@drawable/bg_ffffff_2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="0dp"
                                android:id="@+id/tv_level"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/color_666666"
                                android:text="Lv.1"
                                android:lines="1"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <ImageView
                            android:src="@mipmap/shop_lv_jin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/iv_head"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:lines="1"
                            android:textSize="17sp"
                            android:textColor="@color/color_white_ffffff"
                            android:text="河马鲜生松北店"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:lines="1"
                            android:layout_marginTop="7dp"
                            android:textSize="15sp"
                            android:textColor="@color/color_white_ffffff"
                            android:text="主营：生鲜水果、酒水饮料、日用百货、生活.."
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/rl_mine_info"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"/>
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_ffffff_5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="212dp"
                    android:layout_width="340dp"
                    android:layout_height="88dp">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_num1"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:lines="1"
                            android:textSize="20sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_below="@+id/tv_num1"
                            android:layout_marginTop="7dp"
                            android:layout_centerHorizontal="true"
                            android:text="消息"
                            android:lines="1"
                            android:textSize="13sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_num2"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:lines="1"
                            android:textSize="20sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_below="@+id/tv_num2"
                            android:layout_marginTop="7dp"
                            android:layout_centerHorizontal="true"
                            android:text="动态"
                            android:lines="1"
                            android:textSize="13sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_num3"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:lines="1"
                            android:textSize="20sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_below="@+id/tv_num3"
                            android:layout_marginTop="7dp"
                            android:layout_centerHorizontal="true"
                            android:text="商店"
                            android:lines="1"
                            android:textSize="13sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_num4"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:lines="1"
                            android:textSize="20sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_below="@+id/tv_num4"
                            android:layout_marginTop="7dp"
                            android:layout_centerHorizontal="true"
                            android:text="关注"
                            android:lines="1"
                            android:textSize="13sp"
                            android:textColor="@color/color_101010"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="12dp"
                android:textSize="17sp"
                android:textColor="@color/color_101010"
                android:text="我的订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="待支付"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/color_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="待送货"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/color_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="已送货"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/color_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="退 款"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/color_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/bg_ffffff_5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/selector_fragment_my_bg"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/iv1"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv1"
                        android:text="我的相册"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/selector_fragment_my_bg"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/iv2"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv2"
                        android:text="我的相册"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/selector_fragment_my_bg"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/iv3"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv3"
                        android:text="我的相册"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/selector_fragment_my_bg"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/iv4"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/iv4"
                        android:text="我的相册"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
